{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "paths": {
      "root/*": [
        "src/app/*"
      ]
    },
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ]
  }
}
