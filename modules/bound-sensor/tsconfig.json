{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "bundlerOptions": {
    "entry": "./src/public_api.ts"
  }
}
